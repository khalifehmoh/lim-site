{
  "name": "lim-site",
  "version": "1.0.0",
  "private": true,
  "description": "Frontity project",
  "keywords": [
    "frontity"
  ],
  "engines": {
    "node": "16.x",
    "npm": ">=6.0.0"
  },
  "scripts": {
    "start": "frontity serve --port $PORT",
    "dev": "npm run css && cross-env BASE_URL=https://staging.lookinmena.com frontity dev",
    "dev:no-css": "cross-env BASE_URL=https://staging.lookinmena.com frontity dev",
    "build": "npm run css && cross-env BASE_URL=https://staging.lookinmena.com frontity build",
    "serve": "cross-env BASE_URL=https://staging.lookinmena.com frontity serve",
    "css": "npm-run-all css-compile css-prefix css-rtl css-minify",
    "css-compile": "sass --style expanded --source-map --embed-sources --no-error-css packages/lim-theme/src/styles/bootstrap/_bootstrap.scss  releasedStyles/bootstrap.css",
    "css-minify": "cleancss -O1 --format breakWith=lf --with-rebase --source-map --source-map-inline-sources --output releasedStyles/ --batch --batch-suffix \".min\" \"releasedStyles/*.css\" \"!releasedStyles/*.min.css\"",
    "css-rtl": "cross-env NODE_ENV=RTL postcss --config postcss.config.js --dir \"releasedStyles\" --ext \".rtl.css\" \"releasedStyles/*.css\" \"!releasedStyles/*.min.css\" \"!releasedStyles/*.rtl.css\"",
    "css-prefix": "postcss --config postcss.config.js --replace \"releasedStyles/*.css\" \"!releasedStyles/*.rtl*.css\" \"!releasedStyles/*.min.css\""
  },
  "prettier": {},
  "dependencies": {
    "@frontity/core": "^1.14.3",
    "@frontity/html2react": "^1.7.0",
    "@frontity/mars-theme": "^1.6.2",
    "@frontity/tiny-router": "^1.4.4",
    "@frontity/wp-source": "^1.11.7",
    "bootstrap": "https://github.com/khalifehmoh/lim-bootstrap.git#main",
    "dayjs": "^1.10.7",
    "frontity": "^1.17.1",
    "lim-theme": "file:packages/lim-theme",
    "react-bootstrap": "^2.2.0",
    "rtlcss": "^3.5.0"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.4",
    "clean-css-cli": "^5.5.2",
    "cross-env": "^7.0.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.12",
    "postcss-cli": "^9.1.0",
    "sass": "^1.49.9"
  }
}
